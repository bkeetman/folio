{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Folio",
  "version": "0.1.35",
  "identifier": "com.folio.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Folio",
        "width": 1360,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "title": "Folio",
        "width": 400,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "center": true,
        "transparent": true,
        "alwaysOnTop": true,
        "url": "splashscreen.html"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$APPDATA/covers/**",
          "$HOME/Library/Application Support/com.folio.app/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://bkeetman.github.io/folio/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZCOTQzNUY3MDQ0MUI4OEQKUldTTnVFRUU5eldVYXg0THpaQjJRMEhudE9jZ1hQOVBXcnhtcjg0MExhb25GZ0hRN2ZtT1FjaVgK"
    }
  }
}
